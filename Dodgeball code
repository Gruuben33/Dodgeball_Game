// module aliases
Engine = Matter.Engine
Render = Matter.Render
Runner = Matter.Runner
Bodies = Matter.Bodies
Composite = Matter.Composite
Now = Matter.Common.now()

// create an engine
engine = Engine.create()

// create a renderer
render = Render.create({
    element: document.body,
    engine: engine
});

function setup(){
// create two boxes and a ground
boxA = Bodies.rectangle(400, 200, 80, 80)
boxB = Bodies.rectangle(450, 50, 80, 80)
boxC = Bodies.polygon(200, 100, 9, 45)
boxD = Bodies.polygon(150, 250, 3, 60, { isStatic: true})
object = Bodies.circle(400, 350, 30, { isStatic: true})
ground = Bodies.rectangle(400, 610, 810, 60, { isStatic: true })
playerBottom = Bodies.rectangle(300, 580, 20, 50)

// add all of the bodies to the world
Composite.add(engine.world, [boxA, boxB, boxC, boxD, ground, object, playerBottom]);

// run the renderer
Render.run(render);

// create runner
let runner = Runner.create();

// run the engine
Runner.run(runner, engine);

	var position = boxC.position
	var direction = createVector(0, -0.4)

}

// function draw() {
// 	Bodies.circle(mouseX, mouseY, 20);
// }
function keyPressed() {
	if (keyCode == UP_ARROW) {
		position = boxC.position
		direction = createVector(0, -0.4)
		Matter.Body.applyForce(boxC, position, direction)
	}
	if (keyCode == RIGHT_ARROW) {
		position = boxC.position
		direction = createVector(0.4, 0)
		Matter.Body.applyForce(boxC, position, direction)
	}
	if (keyCode == LEFT_ARROW) {
		position = boxC.position
		direction = createVector(-0.4, 0)
		Matter.Body.applyForce(boxC, position, direction)
	}
	if (keyCode == DOWN_ARROW) {
		position = boxC.position
		direction = createVector(0, 0.2)
		Matter.Body.applyForce(boxC, position, direction)
	}
}
